{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",

        "lib": ["es2017"],
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "src/**/*.spec.*",
    ]
}
